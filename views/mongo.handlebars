
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>MongoDB WebApp View</title>
    <!--link rel="stylesheet" href="/public/css/style2.css" -->
    <link rel="stylesheet" href="css/style2.css">
</head>
<body>

<h1>MONGODB - DataBase</h1>
<section class="insert">
    <h2><b>Insert Data</b></h2>
      <hr/>
    <form action="/mongos/insert" method="post">
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="content">Content</label>
            <input type="text" id="content" name="content">
        </div>
        <div class="input">
            <label for="author">Author</label>
            <input type="text" id="author" name="author">
        </div>
        <button type="submit">INSERT</button>
    </form>
</section>
<section class="get">
    <h2><b>Get Data</b></h2>
      <hr/>
     <br>
    <a href="/mongos/get-data">LOAD DATA</a>
    <div>
        {{# each items }}
            <article class="item">
                <div>Title: {{ this.title }}</div>
                <div>Content: {{ this.content }}</div>
                <div>Author: {{ this.author }}</div>
                <div>ID: {{ this._id }}</div>
            </article>
        {{/each}}
    </div>
</section>
<section class="update">
    <h2><b>Update Data</b></h2>
    <hr/>
    <form action="/mongos/update" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="content">Content</label>
            <input type="text" id="content" name="content">
        </div>
        <div class="input">
            <label for="author">Author</label>
            <input type="text" id="author" name="author">
        </div>
        <button type="submit">UPDATE</button>
    </form>
</section>
</section>
<section class="delete">
    <h2><b>Delete Data</b></h2>
     <hr/>
    <form action="/mongos/delete" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <button type="submit">DELETE</button>
    </form>
</section>


</body>
</html>
